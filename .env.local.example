# Supabase Configuration
# Copy this file to .env.local and fill in your values

# Production Supabase (default when SUPABASE_ENV not set)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Environment selector (optional, defaults to 'production')
# Values: production, local, test
SUPABASE_ENV=production

# Local Supabase (used when SUPABASE_ENV=local)
# Start local Supabase with: supabase start
NEXT_PUBLIC_LOCAL_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_LOCAL_SUPABASE_ANON_KEY=your-local-anon-key
LOCAL_SUPABASE_SERVICE_ROLE_KEY=your-local-service-role-key

# Test Supabase (used when SUPABASE_ENV=test)
# Useful for staging/test environments
NEXT_PUBLIC_TEST_SUPABASE_URL=https://your-test-project.supabase.co
NEXT_PUBLIC_TEST_SUPABASE_ANON_KEY=your-test-anon-key
TEST_SUPABASE_SERVICE_ROLE_KEY=your-test-service-role-key
