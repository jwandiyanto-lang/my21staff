# ============================================
# CONVEX DATABASE
# ============================================
# Convex deployment URL (get from: npx convex dev)
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# Convex deployment key for CI/CD (get from: npx convex deploy)
CONVEX_DEPLOYMENT=dev:your-deployment


# ============================================
# CLERK AUTHENTICATION
# ============================================
# Clerk publishable key (safe to expose in browser)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx

# Clerk secret key (server-side only)
CLERK_SECRET_KEY=sk_test_xxxxx

# JWT issuer domain for Convex auth validation
CLERK_JWT_ISSUER_DOMAIN=https://your-clerk-domain.clerk.accounts.dev

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard


# ============================================
# KAPSO WHATSAPP API
# ============================================
# Kapso API key (get from: Kapso dashboard)
KAPSO_API_KEY=your-kapso-api-key

# Webhook signature secret for validating incoming webhooks
KAPSO_WEBHOOK_SECRET=your-webhook-secret

# Public WhatsApp business phone number (displayed in UI)
NEXT_PUBLIC_KAPSO_PHONE_NUMBER=+1234567890


# ============================================
# ENCRYPTION
# ============================================
# Encryption key for storing sensitive workspace credentials
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-32-byte-base64-encryption-key


# ============================================
# EMAIL (RESEND)
# ============================================
# Resend API key for transactional emails
RESEND_API_KEY=re_xxxxx


# ============================================
# AI MODELS
# ============================================
# Grok API key for AI chat features (optional)
GROK_API_KEY=xai-xxxxx

# Ollama base URL for local AI models (optional)
OLLAMA_BASE_URL=http://localhost:11434


# ============================================
# DEVELOPMENT TOOLS (OPTIONAL)
# ============================================
# ngrok auth token for webhook testing (optional)
NGROK_AUTHTOKEN=your-ngrok-token

# Dev mode flag (optional)
NEXT_PUBLIC_DEV_MODE=false
